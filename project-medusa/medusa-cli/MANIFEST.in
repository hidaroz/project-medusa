# Include important documentation
include README.md
include LICENSE
include CONTRIBUTING.md
include INTEGRATION_GUIDE.md

# Include configuration files
include requirements.txt
include requirements-dev.txt
include pyproject.toml
include pytest.ini

# Include templates and static files
recursive-include src/medusa/templates *.html
recursive-include src/medusa/templates *.css

# Exclude unnecessary files
global-exclude __pycache__
global-exclude *.py[co]
global-exclude .DS_Store
global-exclude *.so
global-exclude .git*
prune .venv
prune htmlcov
prune .pytest_cache
prune .mypy_cache
prune sessions
