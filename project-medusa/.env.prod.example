# MEDUSA Production Environment Configuration
# Copy this file to .env.prod and customize for your deployment

# PostgreSQL Configuration
POSTGRES_DB=medusa
POSTGRES_USER=medusa
POSTGRES_PASSWORD=medusa_secure_password_change_this

# LLM Configuration
LLM_PROVIDER=local
LLM_LOCAL_MODEL=mistral:7b-instruct
LLM_OLLAMA_URL=http://host.docker.internal:11434

# Frontend CORS (comma-separated list of allowed origins)
FRONTEND_URL=http://localhost:3000,http://localhost:3001

# Neo4j Configuration (optional - for World Model)
NEO4J_URI=bolt://neo4j:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=medusa_graph_pass

# Gunicorn Configuration
GUNICORN_WORKERS=4
GUNICORN_TIMEOUT=120
LOG_LEVEL=info